extends base.pug

block content 
    div#videoContainer(data-id=video._id)
        video(src=video.fileUrl)
      
        div#videoControls.videoControls
      
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                    i.fas.fa-expand

    div.video__data
     
            div.video_info
                p.video__title=video.title
                div.video__owner 
                    a(href=`/users/${video.owner._id}`)=video.owner.name
                div.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
                div.video_view 조회수 #{video.meta.views}회
                    
                        span#thumps-up 
                            i.fas.fa-thumbs-up 
                        span.video_like #{video.like}
            div.edit__video
                if String(video.owner._id) === String(loggedInUser._id)
                    div
                        a(href=`${video.id}/edit`) Edit Video
                    div
                        a(href=`${video.id}/delete`) Delete Video 
    if loggedIn 
        div.video_add_comments
            form.video__comment-form#commentForm
                textarea(placeholder = "Write a comment...", cols="30", rows="10")
                button#add Add comment
         
    div.video__comments
        ul
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.id)
                    i.fas.fa-comment
                    span  #{comment.text}
                    if String(video.owner._id) === String(loggedInUser._id)
                        span#deleteIcon ❌
block scripts
    script(src="/static/js/videoPlayer.js")
    script(src = "/static/js/commentSection.js") 